<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cz.krtinec.birthday"
      android:versionCode="7"
      android:versionName="1.1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name"  android:name="CrashReporting">    
        <activity android:name=".Birthday"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BirthdayDebug"
                  android:label="@string/debug_menu">
        </activity>
		      <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name=".BirthdayWidget" android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
        </receiver>
        
        <!-- Preferences -->
        <activity android:name=".ui.BirthdayPreference" android:label="@string/preferences_menu"></activity>
        <!-- Service to perform web API queries -->        
        <service android:name=".BirthdayWidget$UpdateService" />
        
        		<!-- Track Market installs from AdMob ads -->		
		<receiver android:name="com.admob.android.ads.analytics.InstallReceiver" android:exported="true">
			<intent-filter>
				<action android:name="com.android.vending.INSTALL_REFERRER" />
			</intent-filter>
		</receiver>
		
		<!-- The application's publisher ID assigned by AdMob -->
        <meta-data android:value="a14c9119d7c9272" android:name="ADMOB_PUBLISHER_ID" />
        
    </application>

<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-sdk android:minSdkVersion="6"></uses-sdk>

</manifest> 