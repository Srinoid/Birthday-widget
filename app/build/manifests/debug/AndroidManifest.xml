  --><manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="internalOnly" android:versionCode="34" android:versionName="2.3.2" package="cz.krtinec.birthday">
    <application android:debuggable="false" android:icon="@drawable/icon" android:label="@string/app_name" android:name="cz.krtinec.birthday.BirthdayApplication" android:theme="@style/BirthdayTheme">
        <!--<application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">-->
        <activity android:label="@string/app_name" android:name="cz.krtinec.birthday.Birthday">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/debug_menu" android:name="cz.krtinec.birthday.BirthdayDebug">
        </activity>
        <activity android:label="@string/edit" android:name="cz.krtinec.birthday.ui.EditActivity">

        </activity>
        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:label="@string/widget_name2x1" android:name="cz.krtinec.birthday.BirthdayWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="cz.krtinec.birthday.WIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget2x1"/>
        </receiver>

        <receiver android:label="@string/widget_name2x2" android:name="cz.krtinec.birthday.widgets.BirthdayWidget2x2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="cz.krtinec.birthday.WIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget2x2"/>
        </receiver>

        <receiver android:label="@string/widget_name4x1" android:name="cz.krtinec.birthday.widgets.BirthdayWidget4x1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="cz.krtinec.birthday.WIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget4x1"/>
        </receiver>

        <!-- BroadcastReceiver which sends notifications-->
        <receiver android:name="cz.krtinec.birthday.NotificationSender">
            <intent-filter>
                <action android:name="cz.krtinec.birthday.BIRTHDAY_ALARM"/>
            </intent-filter>
        </receiver>

        <!-- BroadcastReceiver which starts notifications after phone restart -->
        <receiver android:name="cz.krtinec.birthday.BootCompletedReceiver">
            <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.HOME"/>
            </intent-filter>
        </receiver>

        <!-- Preferences -->
        <activity android:label="@string/preferences_menu" android:name="cz.krtinec.birthday.ui.BirthdayPreference">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>
    <supports-screens android:anyDensity="true"/>


    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>  -->
</manifest>
